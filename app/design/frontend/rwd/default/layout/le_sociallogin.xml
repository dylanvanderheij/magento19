<layout version="0.1.0">
    <customer_account_login>
        <reference name="customer_form_login">
            <action method="setTemplate"><template>le_sociallogin/form/login.phtml</template></action>
        </reference>
    </customer_account_login>
    <checkout_onepage_index>
        <reference name="checkout.onepage">
            <action method="setTemplate"><template>le_sociallogin/form/onepage.phtml</template></action>
        </reference>
    </checkout_onepage_index>
    <aw_onestepcheckout_index_index>
        <block type="le_sociallogin/button" name="le.sociallogin.aw" />
        <reference name="content">
            <action ifconfig="le_sociallogin/general/showoncheckout" method="insert">
                <block>le.sociallogin.aw</block>
            </action>
        </reference>
    </aw_onestepcheckout_index_index>
    
    <firecheckout_index_index>
        <block type="le_sociallogin/button" name="le.sociallogin.aw" />
        <reference name="content">
            <action ifconfig="le_sociallogin/general/showoncheckout" method="insert">
                <block>le.sociallogin.aw</block>
            </action>
        </reference>
    </firecheckout_index_index>

    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>le_sociallogin/css/magnific-popup.css</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>le_sociallogin/js/jquery.magnific-popup.js</name></action>
        </reference>
        <reference name="product.info.addtocart">
            <block type="core/template" name="facebook.user.friends" template="le_sociallogin/user_details.phtml" />
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="head">
            <action method="addCss"><stylesheet>le_sociallogin/css/shareorder/shareorder.css</stylesheet></action>
        </reference>
        <reference name="content">
            <block type="le_sociallogin/share" name="shareorder.share" template="le_sociallogin/shareorder/share.phtml" after="-"/>
        </reference>
    </checkout_onepage_success>
    <checkout_multishipping_success>
        <reference name="head">
            <action method="addCss"><stylesheet>le_sociallogin/css/shareorder/shareorder.css</stylesheet></action>
        </reference>
        <reference name="content">
            <block type="le_sociallogin/share" name="shareorder.share" template="le_sociallogin/shareorder/share.phtml" after="-"/>
        </reference>
    </checkout_multishipping_success> 
    
</layout>