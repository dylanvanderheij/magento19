<config>
	<modules>
		<Droppin_InstagramConnect>
			<version>1.0.0.1</version>
		</Droppin_InstagramConnect>
	</modules>
  
	<frontend>
		<layout>
			<updates>
				<instagramconnect>
		  			<file>droppin/instagram_connect.xml</file>
				</instagramconnect>
	  		</updates>
		</layout>
	</frontend>
  
	<global>
		<helpers>
	  		<instagramconnect>
				<class>Droppin_InstagramConnect_Helper</class>
	  		</instagramconnect>
		</helpers>
	
		<blocks>
			<instagramconnect>
				<class>Droppin_InstagramConnect_Block</class>
	  		</instagramconnect>
		</blocks>
	
		<models>
			<instagramconnect>
				<class>Droppin_InstagramConnect_Model</class>
				<resourceModel>instagramconnect_resource</resourceModel>
	 		 </instagramconnect>

			<instagramconnect_resource>
				<class>Droppin_InstagramConnect_Model_Resource</class>
				<entities>
		  			<instagramimage>
						<table>droppin_instagramconnect_image</table>
		  			</instagramimage>
				</entities>
	  		</instagramconnect_resource>
		</models>
	
		<resources>
	  		<instagramconnect_setup>
				<setup>
		  			<module>Droppin_InstagramConnect</module>
		  			<class>Droppin_InstagramConnect_Model_Resource_Setup</class>
				</setup>
	  		</instagramconnect_setup>
		</resources>
	
	</global>
	
  	<admin>
		<routers>
	  		<instagramconnect>
				<use>admin</use>
				<args>
		  			<module>Droppin_InstagramConnect</module>
		  			<frontName>instagramconnect</frontName>
				</args>
	  		</instagramconnect>
		</routers>
  	</admin>
  	
  	<adminhtml>
		<acl>
	  		<resources>
				<all>
		  			<title>Allow Everything</title>
				</all>
				
				<admin>
		 			<children>
						<instagramconnect translate="title" module="instagramconnect">
					  		<title>Instagram</title>
					  		<sort_order>1000</sort_order>
					  		<children>
				  				<instagramconnectbackend translate="title">
									<title>Manage Instagram Images</title>
				  				</instagramconnectbackend>
					  		</children>
						</instagramconnect>
		  			</children>
				</admin>
	  		</resources>
		</acl>
		
		<layout>
	  		<updates>
				<instagramconnect>
		  			<file>droppin/instagram_connect.xml</file>
				</instagramconnect>
	  		</updates>
		</layout>
  	</adminhtml>
</config> 
