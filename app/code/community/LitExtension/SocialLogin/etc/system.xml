<config>
    <tabs>
        <litextension translate="label">
            <label>Facebook Extension</label>
            <sort_order>2000</sort_order>
        </litextension>
    </tabs>

    <sections>
        <le_sociallogin>
            <label>Facebook Extension</label>
            <tab>litextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" >
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <showonloginpage translate="label comment">
                            <label>Show On Login Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>le_sociallogin/system_config_source_position</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </showonloginpage>
                        <showoncheckout translate="label comment">
                            <label>Show On Checkout Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>le_sociallogin/system_config_source_postcheckout</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                        </showoncheckout>
                    </fields>
                </general>
                <facebook translate="label" >
                    <label>Facebook Connect Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_key translate="label comment" >
                            <label>Application ID</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>20</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                        <secret translate="label comment">
                            <label>Application Secret</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>30</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secret>
                    </fields>
                </facebook>
                <shareorder translate="label" >
                    <label>Facebook Share Order Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <facebook_enable translate="label">
                            <label>Facebook Share</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_enable>
                    </fields>
                </shareorder>          
            </groups>
        </le_sociallogin>
    </sections>
</config>